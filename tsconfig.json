{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": false,
    "outDir": "./dist",
    "strict": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["typescript"],
  "exclude": ["node_modules"]
}
